<%= flash[:note] %>

<h1>Books</h1>

<table>
  <tr>
  	<th>title</th>
  	<th>body</th>
  	<th></th>
  </tr>
<% @books.each do |book| %>
  <tr>
  	  <td><%= book.title %></td>
  	  <td><%= book.body %></td>
  	  <td>
  	  	<%= link_to "Show", book_path(book.id) %>
  	  	<%= link_to "Edit", edit_book_path(book.id) %>
  	  	<%= link_to "Destroy", book, method: :delete, "data-confirm" => "Are you sure?" %>
  	  </td>
  </tr>
<% end %>
</table>



<h1>新規投稿</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
   <div id="error_explanation" class="alert alert-danger">
